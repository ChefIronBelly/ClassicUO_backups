#put lockpicks, trap tools and training box in backpack
#to go beyond 100 change "100" to "120" or anywhere in between
#stop conditions
if insysmsg 'lockpicks of'
    overhead 'Out of lockpicks' 55
    stop
elseif insysmsg 'trap tools of'
    overhead 'Out of trap tools' 55
    stop
endif
#use locksmith training box
if findtype '3712' true
    dclicktype '3712' true
    waitforgump 736038070
    #train lockpicking first
    if skill 'lockpicking' < 100
        gumpresponse 4
        waitforgump 736038070
        wait 4000
    #train remove trap after lockpicking        
    elseif skill 'remove trap' < 100
        gumpresponse 7
        waitforgump 736038070
        wait 4000
    else 
        overhead 'Training Complete' 55
        stop
    endif
gumpclose
endif
loop