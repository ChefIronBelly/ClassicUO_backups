if not timerexists "heal_other_timer"
    createtimer "heal_other_timer"
    settimer "heal_other_timer" 0
endif

if not listexists "heal_others"
    createlist "heal_others"
endif

if list "heal_others" = 0
    pushlist "heal_others" "0xD0446"
    pushlist "heal_others" "0x5046A"
endif


if skill "Magery" < 80

    if mana <= 40 and not findbuff "actively meditating"
        hotkey 'Meditation'
        wait 3500
    endif

    overhead "Invisibility only"
    if mana >= 40
        hotkey "Invisibility"
        wft
        hotkey 'Target Self'
        wait 500
    endif
    

    loop
endif